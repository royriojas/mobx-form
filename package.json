{
  "name": "mobx-form-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "check:types": "turbo check:types",
    "verify": "turbo lint check:types",
    "storybook": "turbo storybook",
    "docs": "turbo dev --filter=@mobx-form/docs",
    "docs:build": "turbo build --filter=@mobx-form/docs"
  },
  "devDependencies": {
    "turbo": "^2.5.0"
  },
  "packageManager": "bun@1.3.8"
}
